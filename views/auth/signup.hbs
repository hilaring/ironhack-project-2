<!-- layout.hbs -->
<div class="square-content-signup">
  <h1 class="title-page text-center">Sign up baby!</h1>
  <section class="form">
    <form action="/auth/signup" method="POST">
      <div class="form-row">
        <div class="form-group col-md-6">
          <input type="text" class="form-control text-transition" id="username" name="username" placeholder="Username">
        </div>
        <div class="form-group col-md-6">
          <input type="email" class="form-control text-transition" id="email" name="email" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" title="Enter a valid email: characters@characters.domain">
        </div>
        <div class="form-group col-md-6">
          <input type="text" class="form-control text-transition" id="name" name="name" placeholder="Name">
        </div>
        <div class="form-group col-md-6">
          <input type="text" class="form-control text-transition" id="lastname" name="lastname" placeholder="Lastname">
        </div>
        <div class="form-group col-md-6">
          <input type="date" class="form-control text-transition" id="birth" name="birth" placeholder="">
        </div>
        <div class="form-group col-md-6">
          <input type="tel" class="form-control text-transition" id="phone" name="phone" placeholder="Phone" pattern=".{9,}" title="Nine or more characters">
        </div>
        <div class="form-group col-md-6">
          <input type="password" class="form-control text-transition" id="password" name="password" placeholder="Password">
        </div>
        <div class="form-group col-md-6">
          <label for="rate">Want to be a teacher?</label>
          <select class="selectpicker show-tick" id="teacherResponse" name="teacherResponse">
            <option value="no">No</option>
            <option value="yes">Yes</option>
          </select>
        </div>
      </div>
    <input type="submit" class="button-css row align-items-center" value="Create account"></input>
    </form>
  </section>
</div>