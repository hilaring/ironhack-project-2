<!-- layout.hbs -->
<div class="square-content-signup">
  <h1 class="title-page text-center">Sign up baby!</h1>
  <section class="form">
    <form action="/auth/signup" method="POST">
      <div class="form-row">
        <div class="form-group col-md-6">
          <input type="text" class="form-control" id="username" name="username" placeholder="Username">
        </div>
        <div class="form-group col-md-6">
          <input type="email" class="form-control" id="email" name="email" placeholder="Email">
        </div>
        <div class="form-group col-md-6">
          <input type="text" class="form-control" id="name" name="name" placeholder="Name">
        </div>
        <div class="form-group col-md-6">
          <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Lastname">
        </div>
        <div class="form-group col-md-6">
          <input type="date" class="form-control" id="birth" name="birth" placeholder="">
        </div>
        <div class="form-group col-md-6">
          <input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone">
        </div>
        <div class="form-group col-md-6">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
      </div>
    <input type="submit" class="button-css row align-items-center" value="Create account"></input>
    </form>
  </section>
</div>