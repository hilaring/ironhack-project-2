<!-- layout.hbs -->
<div class="body-profile">
<div class="square-content-profile">
    <h1 class="text-center title-profile">WELCOME {{name}}!</h1>
    <div class="info-profile">
        <div class="field-detail fields-profile">
            <p class="title-field">USERNAME</p>
            <span class="fields-profile">{{username}}</span>
        </div>
        <div class="field-detail fields-profile">
            <p class="title-field">Name</p>
            <span class="fields-profile">{{name}}</span>
            <span class="fields-profile">{{lastname}}</span>
        </div>
        <div class="field-detail fields-profile">
            <p class="title-field">EMAIL</p>
            <span class="fields-profile">{{email}}</span>
        </div>
        <br>
    <div>
        <div class="row align-items-center">
            <a class="see-more-btn" href="/profile/{{_id}}/edit">Edit</a>
        </div>
        <br>
        <br>
    <div>
        {{#equal teacher true}}
        <p class="text-center">Create a course, teacher!</p>
        <p id="teacher-space"class="text-center"><a class="input-btn" href="/profile/teacher">Teacher's Space</a></p>
        {{/equal}}
    </div>
    </div>
    <div class="content-profile">
        <h2>Your courses</h2>
        {{#if stats.length}}
            <ul class="list-group list-group-flush">
            {{#each stats}}
                <li id="{{courses.id}}" class="list-group-item hide">
                    <p>{{courses.name}}</p>
                    Go to <a class="input-btn" href="courses/{{courses.id}}">Study!</a>
                    <button type="submit" data-id="{{this._id}}" class="input-btn remove-course">
                    {{!-- <button type="submit" data-id="{{courses.id}}" class="input-btn remove-course"> --}}
                        <i class="fa fa-trash-o"></i>
                    </button>
                    {{!-- <label for="checkbox">Complete</label>
                    <input id="checkComplete" css="checkboxInput" type="checkbox" name="checkComplete" value="false"> --}}
                </li>
            {{/each}}
            </ul>
        {{else}}
        <p>You don't suscribe at any course yet :(</p>
        <p><a class="input-btn" href="/courses">Check our awesome courses!</a></p>
        {{/if}}
    </div>
</div>
</div>
</div>