<!-- layout.hbs -->
<h1 class="text-center">Welcome {{name}}!</h1>
<div class="square-content-profile">
    <div class="content-profile">
        <h5>Personal information</h5>
        <br>
        <div><span class="user-information">Username: </span><span>{{username}}</span></div>
        <div>
            <span class="user-information">Name: </span>
            <span>{{name}}</span>
        </div>
        <div><span class="user-information">Last name: </span><span>{{lastname}}</span></div>
        <div><span class="user-information">Birthday: </span><span>{{birth}}</span></div>
        <div><span class="user-information">Email: </span><span>{{email}}</span></div>
        <div><span class="user-information">Phone: </span><span>{{phone}}</span></div>
        <div><a class="input-btn" href="/profile/{{_id}}/edit">Edit</a></div>
    </div>
</div>