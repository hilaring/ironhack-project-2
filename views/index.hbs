<div class="square-content align-middle">
    <h1 class="title-page text-center">PLEASE LOG IN!</h1>
    <section class="form">
        <form action="/auth" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1" class="title-field">EMAIL</label>
                <input type="email" name="email" class="fields-profile text-transition" id="inputEmail1" aria-describedby="emailHelp" placeholder="your@email.com">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="title-field">PASSWORD</label>
                <input type="password" name="password" class="fields-profile text-transition" id="inputPassword" placeholder="password">
            </div>
            <div>
                <div class="check-pass">
                    <span id="emailHelp" class="show-pass">Show password</span>
                </div>
                <div class="check-pass">
                    <input type="checkbox" id="showPassword">
                </div>
            </div>
    <p>{{message}}</p>
            <button type="submit" class="button-css row align-items-center">Submit</button>
        </form>
        <br>
        <div class="form-group">
            <form action="/auth/signup" method="GET">
                <label for="exampleInputEmail1">New user?</label>
                <input type="submit" value="Sign up" class="input-btn">
            </form>
        </div>
        </form>
    </section>
</div>