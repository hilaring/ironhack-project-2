<!-- layout.hbs -->
<div class="align-items-center search-container">
  <form class="search-form" action="/courses/search" method="POST">
    <input class="form-control text-transition" type="search" placeholder="Search..." name="query" id="search-courses">
    <button class="btn" type="submit">
      <i class="fa fa-search"></i>
    </button>
  </form>
</div>

<br>
<div class="row">
  {{!-- n√∫mero alumnos --}}
  <button id="mostStudents" type="submit" value="mostStudents" class="button-css sort-btn">
    <i class="fa fa-star"></i>
  </button>
  {{!-- orden alfabetico --}}
  <button id="alphabeticalAscending" type="submit" value="alphabeticalAscending" class="button-css sort-btn">
    <i class="fa fa-chevron-up"></i>
  </button>
  <button id="alphabeticalDescending" type="submit" value="alphabeticalDescending" class="button-css sort-btn">
    <i class="fa fa-chevron-down"></i>
  </button>
  {{!-- fecha --}}
  <button id="creationAscending" type="submit" value="creationAscending" class="button-css sort-btn">
    <i class="fa fa-calendar-plus-o"></i>
  </button>
  <button id="creationDescending" type="submit" value="creationDescending" class="button-css sort-btn">
    <i class="fa fa-calendar-minus-o"></i>
  </button>
</div>


{{#each coursesArray}}
  <div class="square-content-courses">
    <div class="title-course text-center">{{name}}</div>
    <br>
    <div class="text-center">
      <img src="{{image}}" alt="" srcset="">
    </div>
    <br>
    <p class="course-resume">{{resume}}</p>
    <div class="row align-items-center">
      <a class="see-more-btn" href="/courses/{{id}}">See more</a>
    </div>
  </div>
{{/each}}

