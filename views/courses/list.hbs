<!-- layout.hbs -->
<div class="filter-box">
  <div class="filter-form">
    <form action="/courses/search" method="POST">
      <input class="text-transition input-filter" type="search" placeholder="Search..." name="query" id="search-courses">
      <button type="submit">
        <i class="fa fa-search"></i>
      </button>
    </form>
  </div>
  <br>
  <div class="sort-row">
    {{!-- n√∫mero alumnos --}}
    <button id="mostStudents" type="submit" value="mostStudents" class="button-sort">
      <i class="fa fa-star fa-lg icon-sort"></i>
    </button>
    {{!-- orden alfabetico --}}
    <button id="alphabeticalAscending" type="submit" value="alphabeticalAscending" class="button-sort">
      <i class="fa fa-chevron-up fa-lg icon-sort"></i>
    </button>
    <button id="alphabeticalDescending" type="submit" value="alphabeticalDescending" class="button-sort">
      <i class="fa fa-chevron-down fa-lg icon-sort"></i>
    </button>
    {{!-- fecha --}}
    <button id="creationAscending" type="submit" value="creationAscending" class="button-sort">
      <i class="fa fa-calendar-plus-o fa-lg icon-sort"></i>
    </button>
    <button id="creationDescending" type="submit" value="creationDescending" class="button-sort">
      <i class="fa fa-calendar-minus-o fa-lg icon-sort"></i>
    </button>
  </div>
</div>

{{#each coursesArray}}
<div class="square-content-courses">
  <h1 class="title-course text-center">{{name}}</h1>
  <br>
  <div class="text-center">
    <img src="{{image}}" alt="" srcset="">
  </div>
  <br>
  <div>
    <p class="course-resume">{{resume}}</p>
  </div>
  <div class="course-resume">
    <div>
      <i class="fa fa-users fa-lg icon-sort"></i>
      <span>Total students: </span>
      <span id="number-students">{{students.length}}</span>
    </div>
  </div>
  <div class="course-resume">
    <div>
      <i class="fa fa-user fa-lg icon-sort"></i>
      <span>Total students: </span>
    </div>
  </div>
  <div class="row align-items-center">
    <a class="see-more-btn" href="/courses/{{id}}">See now !</a>
  </div>
</div>
